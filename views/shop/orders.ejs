<%- include('../includes/head.ejs') %> 
<link rel="stylesheet" href="/css/orders.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %> 
    <main>
        <% if (orders.length > 0) { %> 
            <ul class="orders">
                <% orders.forEach(order => { %> 
                    <li class="orders__item">
                        <h1>Order - # <%= order._id %> - 
                            <a href="/orders/<%= order._id %>">Invoice</a>
                        </h1>
                        <ul class="orders__products">
                            <% order.products.forEach(i => { %> 
                                <li class="orders__products-item">
                                    <span><%= i.product.title %></span>
                                    <div>
                                        <span><%= i.quantity %> x</span>
                                        <span style="margin-left: 1rem;">$ <%= i.product.price %></span>
                                    </div>
                                </li>
                            <% }); %> 
                        </ul>
                        <hr style="margin-top: 0.8rem;">
                        <div class="orders__total">
                            <h1>Total</h1>
                            <h1>$ <%= order.total %></h1>
                        </div>
                    </li>
                <% }); %> 
            </ul>
        <% } else { %>         
            <h1>No orders</h1>
        <% } %> 
    </main>
<%- include('../includes/end.ejs') %> 