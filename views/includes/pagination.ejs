<section class="pagination centered">
  <% if (currentPage !== 1 && previousPage !== 1) { %>
    <a href="?page=1">first</a>
  <% } %>
  <% if (hasPreviousPage) { %>
    <a href="?page=<%= previousPage %>"><%= previousPage === 1 ? 'first' : 'prev' %></a>
  <% } %>
    <a href="?page=<%= currentPage %>" class="active"><%= currentPage === 1 ? 'first' : currentPage %></a>
  <% if (hasNextPage) { %>
    <a href="?page=<%= nextPage %>">next</a>
  <% } %> <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
    <a href="?page=<%= lastPage %>">last</a>
  <% } %>
</section>
